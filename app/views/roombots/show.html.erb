<div class="span9">
<%- model_class = @roombot.class -%>
<!-- breadcrumbs -->
<ul class="breadcrumb">
  <li>
    <%= link_to "Roombots", roombots_path %> <span class="divider">/</span>
  </li>
  <li class="active"><%= @roombot.name %></li>
</ul>
<!-- end breadcrumbs -->

<h1><%=t '.title', :default => model_class.model_name.human %></h1>

<p>
  <strong><%= model_class.human_attribute_name(:name) %>:</strong><br>
  <%= @roombot.name %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:location) %>:</strong><br>
  <%= @roombot.location %>
</p>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              roombots_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_roombot_path(@roombot), :class => 'btn' %>
  <%= link_to t('.edit', :default => raw("<i class='icon-magnet icon-white'></i> Control") ),
              control_roombot_path(@roombot), :class => 'btn btn-primary' %>
  <%= link_to t('.destroy', :default => raw("<i class='icon-remove icon-white'></i> Exterminate")),
              roombot_path(@roombot),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
</div>